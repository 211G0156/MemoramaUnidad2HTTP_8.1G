<Window x:Class="MemoramaUnidad2HTTP_8._1G.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoramaUnidad2HTTP_8._1G"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightPink">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Memorama de Animalitos" FontSize="50" FontWeight="Bold"
                       Foreground="#FFE4E1" HorizontalAlignment="Center" Margin="0 0 0 30" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                <Button x:Name="btnIniciar" Content="Iniciar juego" Width="180" Height="60"
                        Background="#FADADD" Foreground="Black" FontSize="16" Click="btnIniciar_Click"
                        Cursor="Hand" BorderBrush="RosyBrown" BorderThickness="3" Margin="40"/>

                <Button x:Name="btnDetener" Content="Detener juego" Width="180" Height="60"
                        Background="#FFE4E1" Foreground="Black" FontSize="16" Click="btnDetener_Click"
                        Cursor="Hand" BorderBrush="RosyBrown" BorderThickness="3"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
